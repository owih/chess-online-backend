generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int          @id @default(autoincrement())
  name  String
  img   String?
  games UserOnGame[]
}

model Game {
  id            Int          @id @default(autoincrement())
  players       UserOnGame[]
  published     Boolean?     @default(false)
  gameId        Int
  state         String
  playerBlackId Int?
  playerWhiteId Int?
  viewers       Int[]
}

model UserOnGame {
  game       Game     @relation(fields: [gameId], references: [id])
  gameId     Int
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([gameId, userId])
}
