generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int     @id @default(autoincrement())
  name String
  img  String?
}

model ChessGameRoom {
  id            Int      @id @default(autoincrement())
  published     Boolean? @default(false)
  state         String?
  gameId        String   @unique
  whitePlayerId Int?
  blackPlayerId Int?
  viewersId     Int[]
  currentPlayer    CurrentPlayer
}

enum CurrentPlayer {
  WHITE
  BLACK
}

