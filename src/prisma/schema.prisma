generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int     @id @default(autoincrement())
  name String
  img  String?
}

model ChessGameState {
  id    Int     @id @default(autoincrement())
  state String?
}

model ChessGameRoom {
  id            Int      @id @default(autoincrement())
  published     Boolean? @default(false)
  stateId       Int
  gameId        String   @unique
  blackPlayerId Int?
  whitePlayerId Int?
  viewersId     Int[]
  playerTurn    PlayerTurn
}

enum PlayerTurn {
  WHITE
  BLACK
}

